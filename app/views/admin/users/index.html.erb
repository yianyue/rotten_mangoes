<h1>User List</h1>
<%= paginate @users %>
<table class="table">
  <tr>
    <th>User Name</th>
    <th>Email</th>
    <th>is Admin?</th>
    <th>Actions</th>
  </tr>
  <% @users.each do |user| %>
    <tr>
      <td><h5><%= link_to user.full_name, admin_user_path(user) %></h5></td>
      <td><h5><%= user.email %></h5></td>
      <td><h5><%= user.admin %></h5></td>
      <td>
        <%= link_to "edit", edit_admin_user_path(user), class: "btn btn-info" %> 
        <%= link_to "become #{user.full_name}", admin_become_user_path(user), class: "btn btn-success" %>
        <%= link_to "delete", admin_user_path(user), method: :delete,  data: {confirm: "You sure?"}, class: "btn btn-danger" %>
      </td>
    </tr>
  <% end %>
</table>