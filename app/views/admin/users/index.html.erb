<h1>User List</h1>
<%= link_to "Add a New User", new_admin_user_path %><br>

<%= paginate @users %>

<% @users.each do |user| %>
  <%= user.full_name %>
  <%= user.email %>
   <% if user.admin %> Admin <% end %>
  <%= link_to "edit", edit_admin_user_path(user) %>, 
  <%= link_to "delete", admin_user_path(user), method: :delete,  data: {confirm: "You sure?"} %>
  <hr>
<% end %>