<h1>User List</h1>
<%= link_to "Add a New User", new_admin_user_path %><br>

<%= paginate @users %>

<table class="table table-hover">
  <tr>
    <th>User Name</th>
    <th>Email</th>
    <th>is Admin?</th>
    <th>Actions</th>
  </tr>
  <% @users.each do |user| %>
    <tr>
      <td><%= link_to user.full_name, admin_user_path(user) %></td>
      <td><%= user.email %></td>
      <td><%= user.admin %></td>
      <td><%= link_to "edit", edit_admin_user_path(user) %>, 
      <%= link_to "delete", admin_user_path(user), method: :delete,  data: {confirm: "You sure?"} %>,
      <%= link_to "become #{user.full_name}", admin_become_user_path(user) %></td>
    </tr>
  <% end %>
</table>