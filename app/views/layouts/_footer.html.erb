<footer>
  <small>
    <% if current_user && current_user.admin %>
      Signed in as <%= current_user.full_name %> | <%= link_to "See All Users", admin_users_path %> | <%= link_to "Log out", session_path(:current), method: :delete %>
    <% elsif current_user %>
      Signed in as <%= current_user.full_name %> | <%= link_to "Log out", session_path(:current), method: :delete %>
      <% if mock_user %> 
        <%= link_to "Back to Admin", admin_become_admin_path %>
